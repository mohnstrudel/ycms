-if object.errors.any?
  .panel.panel-warning
    .panel-heading
      %i.fa.fa-warning
      Warning - Errors
    .panel-body
      %ul
        -object.errors.each do |attribute, message| 
          %li
            ="#{object.class.human_attribute_name(attribute)} - #{message}"

.row
  .col-lg-12
    .ibox.float-e-margins
      .ibox-title
        %h5
          ="#{controller.action_name.capitalize} #{object.class.name}"
          %small With custom checbox and radion elements.
        .ibox-tools
          %a.collapse-link
            %i.fa.fa-chevron-up
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %i.fa.fa-wrench
          %ul.dropdown-menu.dropdown-user
            %li
              %a{:href => "#"} Config option 1
            %li
              %a{:href => "#"} Config option 2
          %a.close-link
            %i.fa.fa-times
      .ibox-content
        =form_for admin_form_arguments_builder(object, local_assigns[:namespace]), :html => {:class => "form-horizontal"} do |f|
          -if object.respond_to?(:title)
            .form-group
              %label.col-sm-2.control-label Title
              .col-sm-10
                =f.text_field :title, class: 'form-control'
            .hr-line-dashed
          -if object.respond_to?(:description)
            .form-group
              %label.col-sm-2.control-label Description
              .col-sm-10
                =f.bootsy_area :description, class: 'form-control'
                %span.help-block.m-b-none A block of help text that breaks onto a new line and may extend beyond one line.
            .hr-line-dashed
          -if object.respond_to?(:body)
            .form-group
              %label.col-sm-2.control-label Text body
              .col-sm-10
                =f.bootsy_area :body, class: 'form-control', rows: 12
            .hr-line-dashed
          -if object.respond_to?(:slug)
            .form-group
              %label.col-sm-2.control-label Slug
              .col-sm-10
                =f.text_field :slug, class: 'form-control'
            .hr-line-dashed
          -if object.respond_to?(:page_category_id)
            .form-group
              %label.col-lg-2.control-label Category
              .col-lg-10
                =f.select :page_category_id, PageCategory.all.map { |page_category| [ page_category.title, page_category.id ] }, {}, { class: "form-control m-b" } 
            .hr-line-dashed
          -if object.respond_to?(:post_category_id)
            .form-group
              %label.col-lg-2.control-label Category
              .col-lg-10
                =f.select :post_category_id, PostCategory.all.map { |post_category| [ post_category.title, post_category.id ] }, {}, { class: "form-control m-b" }
            .hr-line-dashed

          -if object.respond_to?(:first_name)
            .form-group
              %label.col-lg-2.control-label First Name
              .col-lg-10
                =f.text_field :first_name, class: "form-control"
            .hr-line-dashed

          -if object.respond_to?(:second_name)
            .form-group
              %label.col-lg-2.control-label Last Name
              .col-lg-10
                =f.text_field :second_name, class: "form-control"
            .hr-line-dashed

          -if object.respond_to?(:email)
            .form-group
              %label.col-lg-2.control-label Email
              .col-lg-10
                =f.text_field :email, class: "form-control"
            .hr-line-dashed
          
          -if object.respond_to?(:password)
            .form-group
              %label.col-lg-2.control-label Password
              .col-lg-10
                =f.password_field :password, class: "form-control"
            .hr-line-dashed


          .hr-line-dashed
          .form-group
            .col-sm-4.col-sm-offset-2
              =link_to "Back", send("admin_#{local_assigns[:namespace]}#{object_name(object).pluralize}_path"), class: 'btn btn-white'
              =f.submit "Save", class: 'btn btn-primary'